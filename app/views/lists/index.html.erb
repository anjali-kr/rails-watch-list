
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/dTLlhgeEJWg/1600x800);">
  <div class="container">
    <h1>Save your favorite movies</h1>
    <%# <p>Change your life and learn to code at one of our campuses around the world.</p> %>
    <%# <a class="btn btn-flat" href="#">Create a new list</a> %>
    <%= link_to 'Add a new list', new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container mt-3">
  <h4>My Lists</h4>

  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-12 col-md-4">
      <%=  link_to list_path(list) do%>
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/RM-5zzFsR2I/800x500)">
        <%= list.name %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
